<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="format"
            type="java.text.SimpleDateFormat" />

        <variable
            name="user"
            type="com.congxiaoyao.httplib.request.body.User" />

        <variable
            name="taskRsp"
            type="com.congxiaoyao.httplib.response.TaskRsp" />
    </data>

    <FrameLayout
        android:id="@+id/ff_container"
        tools:context="com.congxiaoyao.xber_admin.driverslist.taskdetail.TaskDetailActivity"
        android:background="@color/colorZhihuWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:id="@+id/map_container">

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorZhihuWhite"
            android:orientation="vertical">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:theme="@style/AppTheme.AppBarOverlay">

                <android.support.v7.widget.Toolbar
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:id="@+id/toolbar"
                    android:padding="0dp"
                    app:popupTheme="@style/AppTheme.PopupOverlay"></android.support.v7.widget.Toolbar>
            </android.support.design.widget.AppBarLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/ll_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.congxiaoyao.xber_driver.widget.XberDividerLayout
                        android:layout_width="match_parent"
                        app:divider_size="2px"
                        app:divider_color="#e6e6e6"
                        app:divider_top="true"
                        app:divider_bottom="true"
                        android:orientation="vertical"
                        android:id="@+id/sender_container"
                        android:visibility="gone"
                        tools:visibility="visible"
                        android:layout_marginTop="8dp"
                        android:background="#ffffff"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            app:divider_bottom="true"
                            android:paddingRight="16dp"
                            android:layout_height="40dp">

                            <View
                                android:layout_width="4dp"
                                android:layout_height="match_parent"
                                android:background="@color/colorPrimary"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_marginLeft="12dp"
                                android:layout_height="40dp"
                                android:text="派发人"
                                android:textSize="16sp"
                                android:textColor="@color/colorBlack"
                                android:gravity="center_vertical" />
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/avatar_small"/>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:paddingRight="16dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_driver"
                                android:tint="@color/colorAccent"
                                android:padding="1dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="姓名"
                                android:textSize="15sp"
                                android:textColor="@color/colorDarkGray"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:textSize="15sp"
                                android:gravity="center_vertical|right"
                                android:layout_height="wrap_content"
                                android:text="@{user.name}"
                                tools:text="丛圣杰"
                                android:textColor="@color/colorDarkGray" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:paddingRight="16dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_gender"
                                android:tint="@color/colorAccent"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="性别"
                                android:textSize="15sp"
                                android:textColor="@color/colorDarkGray"
                                android:gravity="center_vertical" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="男"
                                android:textSize="15sp"
                                android:textColor="@color/colorDarkGray"
                                android:gravity="center_vertical|right" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal"
                            android:paddingRight="16dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_age"
                                android:tint="@color/colorAccent"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="年龄"
                                android:textSize="15sp"
                                android:textColor="@color/colorDarkGray"
                                android:gravity="center_vertical" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                tools:text="21"
                                android:text="@{user.age+``}"
                                android:textSize="15sp"
                                android:textColor="@color/colorDarkGray"
                                android:gravity="center_vertical|right" />

                        </LinearLayout>

                    </com.congxiaoyao.xber_driver.widget.XberDividerLayout>

                    <com.congxiaoyao.xber_driver.widget.XberDividerLayout
                        app:divider_size="2px"
                        app:divider_color="#e6e6e6"
                        app:divider_top="true"
                        app:divider_bottom="true"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical"
                        android:background="#ffffff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <FrameLayout
                            app:divider_bottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <View
                                android:layout_width="4dp"
                                android:layout_height="match_parent"
                                android:background="@color/colorPrimary"/>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_marginLeft="16dp"
                                android:textSize="16sp"
                                android:layout_height="40dp"
                                android:text="记录详情"
                                android:textColor="@color/colorBlack"
                                android:gravity="center_vertical" />

                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_location"
                                android:tint="@color/colorAccent"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="起始地："
                                android:textSize="15sp"
                                android:textColor="@color/colorDarkGray"
                                android:gravity="center_vertical" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                tools:text="天津"
                                android:text="@{taskRsp.startSpot.spotName}"
                                android:textSize="15sp"
                                android:textColor="@color/colorDarkGray"
                                android:gravity="center_vertical" />

                        </LinearLayout>

                        <LinearLayout
                            app:divider_bottom="true"
                            app:divider_padding_left="56dp"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_location"
                                android:tint="@color/colorAccent"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="目的地："
                                android:textSize="15sp"
                                android:textColor="@color/colorDarkGray"
                                android:gravity="center_vertical" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                tools:text="北京"
                                android:text="@{taskRsp.endSpot.spotName}"
                                android:textSize="15sp"
                                android:textColor="@color/colorDarkGray"
                                android:gravity="center_vertical" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_time"
                                android:tint="@color/colorAccent"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="开始时间："
                                android:textSize="15sp"
                                android:textColor="@color/colorDarkGray"
                                android:gravity="center_vertical" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@{format.format(taskRsp.startTime)}"
                                tools:text="2017年10月5日"
                                android:textSize="15sp"
                                android:textColor="@color/colorDarkGray"
                                android:gravity="center_vertical" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_time"
                                android:tint="@color/colorAccent"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="结束时间："
                                android:textSize="15sp"
                                android:textColor="@color/colorDarkGray"
                                android:gravity="center_vertical" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                tools:text="2017年10月5日"
                                android:text="@{format.format(taskRsp.endTime)}"
                                android:textSize="15sp"
                                android:textColor="@color/colorDarkGray"
                                android:gravity="center_vertical" />

                        </LinearLayout>

                    </com.congxiaoyao.xber_driver.widget.XberDividerLayout>


                    <com.congxiaoyao.xber_driver.widget.XberDividerLayout
                        app:divider_size="2px"
                        app:divider_color="#e6e6e6"
                        app:divider_top="true"
                        app:divider_bottom="true"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp"
                        android:background="#ffffff"
                        android:layout_height="wrap_content">

                        <FrameLayout
                            app:divider_bottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <View
                                android:layout_width="4dp"
                                android:layout_height="match_parent"
                                android:background="@color/colorPrimary"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_marginLeft="16dp"
                                android:layout_height="40dp"
                                android:text="运输内容"
                                android:textSize="16sp"
                                android:textColor="@color/colorBlack"
                                android:gravity="center_vertical" />
                        </FrameLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_task_detail"
                                android:tint="@color/colorAccent"
                                android:padding="1dp"
                                android:layout_marginTop="8dp"
                                android:id="@+id/img_content_icon"
                                android:layout_marginBottom="8dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp" />

                            <TextView
                                android:layout_toRightOf="@id/img_content_icon"
                                android:layout_width="match_parent"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="10dp"
                                android:textSize="15sp"
                                android:layout_height="wrap_content"
                                tools:text="未标注运输内容"
                                android:text="@{taskRsp.content}"
                                android:textColor="@color/colorDarkGray" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_task_detail"
                                android:tint="@color/colorAccent"
                                android:padding="1dp"
                                android:id="@+id/ic_note_icon"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp" />

                            <TextView
                                android:layout_toRightOf="@id/ic_note_icon"
                                android:layout_width="match_parent"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="10dp"
                                android:textSize="15sp"
                                android:layout_height="wrap_content"
                                tools:text="暂无备注"
                                android:text="@{taskRsp.note}"
                                android:textColor="@color/colorDarkGray" />

                        </RelativeLayout>

                    </com.congxiaoyao.xber_driver.widget.XberDividerLayout>


                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </FrameLayout>
</layout>